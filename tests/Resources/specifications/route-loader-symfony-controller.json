{
    "openapi": "3.0.0",
    "info": {
        "title": "OpenAPI bundle minimal test specification",
        "version": "0.1.0"
    },
    "paths": {
        "/pets/{uuid}": {
            "put": {
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Pet"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Returns the stored pet.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Pet"
                                    }
                                }
                            }
                        }
                    }
                },
                "x-symfony-controller": "Nijens\\OpenapiBundle\\Controller\\FooController::bar"
            },
            "parameters": [
                {
                    "name": "uuid",
                    "in": "path",
                    "required": true,
                    "schema": {
                        "type": "string",
                        "format": "uuid"
                    }
                }
            ]
        }
    },
    "components": {
        "schemas": {
            "Pet": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int32",
                        "readOnly": true,
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Dog"
                    }
                }
            }
        }
    }
}
